server1 {

	listen 8081 
	server_name www.site1.com
	client_max_body_size 8000

	error_page 301 ./www/errors/301.html
	error_page 400 ./www/errors/400.html
	error_page 403 ./www/errors/403.html
	error_page 404 ./www/errors/404.html
	error_page 405 ./www/errors/405.html
	error_page 500 ./www/errors/500.html

	location /getnok {
		root /www/site1/aaa
		autoindex	true
		allowed_methods	GET		false
		allowed_methods	POST	false
		allowed_methods	DELETE	false
	}
	location /getok {
		root /www/site1/bbb
		autoindex	true
		#index index.html
		allowed_methods	GET		true
		allowed_methods	POST	false
		allowed_methods	DELETE	false
	}
	location /redirection {
		root /www/site1/ccc
		redirection www.amazon.com
		autoindex	true
		index index.html
		allowed_methods	GET		true
		allowed_methods	POST	false
		allowed_methods	DELETE	false
	}
	location /diretorio {
		root /www/site1/ddd
		index index.html
		autoindex	false
		allowed_methods	GET		true
		allowed_methods	POST	false
		allowed_methods	DELETE	false
	}
	location /diretorio {
		root /www/site1/eee
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	false
		allowed_methods	DELETE	false
	}
	location /cgi {
		root /www/site1/fff
		autoindex	true
		allowed_methods	GET		true
		allowed_methods	POST	false
		allowed_methods	DELETE	false
	}
	location / {
		root /www/site1
		index site1_root.html
		allowed_methods	GET		true
		allowed_methods	POST	false
		allowed_methods	DELETE	false
	}
}


