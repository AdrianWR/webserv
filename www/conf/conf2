sample_server_X {

	listen 80 81 8080 8081
	server_name www.site1 www.site1.com site1
	client_body_buffer_size 8000
	error_page 404 ./error/404.html
	error_page 403 ./error/403.html
	error_page 500 ./error/500.html

	location /images {
		redirection www.google.com
		root /var/www
		upload_path /uploads
		cgi_pass	pass
		autoindex	false
		index	index.htm index.html index.php
		allowed_methods	GET		true
		allowed_methods	POST	false
		allowed_methods	DELETE	false
		cgi_param p1 um
		cgi_param p2 dois
	}
	location /sounds {
		redirection www.amazon.com
		root /var/www
		upload_path /uploads_sounds
		cgi_pass	pass
		autoindex	true
		index nada vazio vacuo 
		allowed_methods	GET		false
		allowed_methods	POST	true
		allowed_methods	DELETE	true
		cgi_param p10 dez
		cgi_param p20 vinte
	}
}
